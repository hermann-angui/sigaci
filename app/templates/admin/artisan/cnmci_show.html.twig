{% extends 'admin/base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('assets/admin/libs/sweetalert2/sweetalert2.min.css') }}" rel="stylesheet" type="text/css" />
    <style>
        .head {
            background-color: #ffd4f9;
            color: #000000;
        }
        #top-row .form-check-input {
            width: 1.2em;
            height: 1.2em;
            margin-top: 0.4em;
        }

        .form-check-input:checked[type=radio] {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 10l3 3l6-6'/%3e%3c/svg%3e")
        }

        .form-label, .col-form-label, .form-check-label {
            font-size: 14px;
        }

        .form-check-input {
            width: 0.85em;
            height: 0.85em;
            margin-top: 0.4em;
        }

        .form-check-input:checked {
            background-color: #101011;
            border-color: #000000;
        }

        .form-check-input:focus {
            border-color: none;
            outline: 0;
            box-shadow: none;
        }

        .form-check-input[type=radio] {
            border-radius: 0.2em;
        }

        div.input, input[type="text"],input[type="number"] {
            border: 0;
            border-bottom: 1px dashed #000;
            background-color: #f4f5f8;
            height: 2em;
        }

        .form-control:focus {
            background-color: #f4f5f8;
            border-color: #000;
            outline: 0;
            box-shadow: none;
        }

        .page-header {
            height: 160px !important;
        }
    </style>
{% endblock %}


{% block body %}
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">

        {{ include('admin/_partials/header.html.twig') }}

        {% if is_granted('ROLE_ADMIN') %}
            <!-- ========== Left Sidebar Start ========== -->
            {{ include('admin/_partials/left-sidebar.html.twig')}}
            <!-- Left Sidebar End -->
        {% endif %}

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">Formulaire de la chambre de métiers</h4>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="{{path('admin_index')}}">Acceuil</a></li>
                                        <li class="breadcrumb-item active">Fiche cnmci</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body border-bottom">
                                    <div class="d-flex justify-content-end">
                                        <div class="flex-shrink-0 mx-1">
                                            {% if artisan.status == 'ENROLEMENT_PAYEMENT_FRAIS_ENROLEMENT' %}
                                            <a id="validate-data" class="btn btn-dark btn-sm waves-effect waves-light" href="{{ path('admin_artisan_validate_data', {id: artisan.id})}}"><i class="fa fa-check"></i> Valider les données</a>
                                            {% endif %}
                                            <a class="btn btn-dark btn-sm waves-effect waves-light" href="{{ path('admin_artisan_edit', {id: artisan.id})}}"><i class="fa fa-pen"></i> Editer</a>
                                            <a href="{{ path('download_payment_receipt_pdf', {id: payment.id })}}" class="btn btn-primary btn-sm waves-effect waves-light mx-1"><i class="fa fa-download"></i> Télécharger le reçu d'enrôlement</a>
                                            <a class="btn btn-dark btn-sm waves-effect waves-light mx-1" href="{{ path('cnmci_download_cnmci_pdf', {id: artisan.id}) }}"><i class="fa fa-download"></i> Télécharger la fiche CNMCI</a>
                                            <a class="btn btn-dark btn-sm waves-effect waves-light" href="{{ path('admin_index')}}"><i class="fa fa-home"></i> Revenir à l'acceuil</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ include('admin/artisan/_form_cnmci.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- container-fluid -->
            </div><!-- End Page-content -->

            {{ include('admin/_partials/footer.html.twig') }}
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    <!-- Right Sidebar -->

    <!-- /Right-bar -->

    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

{% endblock %}

{% block javascript %}
{{ parent() }}
<script src="{{ asset('assets/admin/libs/sweetalert2/sweetalert2.min.js') }}"></script>
<script>
    $('document').ready(function() {

        $("#validate-data").click(function(e){
            e.preventDefault();
            var url = $(this).prop('href');
            $.get(url, function(data){
                if(data === 'success'){
                  Swal.fire({
                        position: "center",
                        icon: "success",
                        title: "Enregistrement effectuée avec succès",
                        showConfirmButton: false,
                        timer: 1500
                    }).then(function (result) {
                       $('#validate-data').hide();
                  });
                }

            });
        });
    });
</script>
{% endblock %}


