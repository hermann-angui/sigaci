<!DOCTYPE html>

<title>Crm index</title>

{% block body %}
    <h1>Crm index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for crm in crms %}
            <tr>
                <td>{{ crm.id }}</td>
                <td>{{ crm.name }}</td>
                <td>
                    <a href="{{ path('app_crm_show', {'id': crm.id}) }}">show</a>
                    <a href="{{ path('app_crm_edit', {'id': crm.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crm_new') }}">Create new</a>
{% endblock %}
